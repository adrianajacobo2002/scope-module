<odoo>
    <record id="mail_template_sale_proposal_unified" model="mail.template">
        <field name="name">Cotización con Propuesta Técnica</field>
        <field name="model_id" ref="sale.model_sale_order" />
        <field name="subject">Presupuesto {{ object.name }}</field>
        <field name="email_from">${(object.company_id.email or '')|safe}</field>
        <field name="partner_to">${object.partner_id.id}</field>
        <field name="auto_delete" eval="True" />
        <!-- OJO: sin report_template / sin ref_ir_act_report -->
        <!-- El adjunto PDF lo añadimos por código en action_quotation_send -->
        <field name="body_html"><![CDATA[
      <p>Hola ${object.partner_id.name},</p>
      <p>Adjuntamos la propuesta técnica y económica correspondiente a su cotización <strong>${object.name}</strong>.</p>
      <p>Quedamos atentos a sus comentarios.</p>
    ]]></field>
    </record>
</odoo>