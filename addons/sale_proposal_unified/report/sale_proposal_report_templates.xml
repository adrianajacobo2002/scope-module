<odoo>
    <template id="report_sale_proposal_extra_pages">
        <t t-call="web.html_container">

            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <!--alcances-->
                    <t t-set="groups" t-value="doc._get_scope_groups_standard()" />
                    <t t-if="groups">
                        <div class="page">
                            <div class="section-title">
                                Alcance t√©cnico del proyecto ofertado
                            </div>
                            
                            <t t-foreach="groups" t-as="g">
                                <t t-if="g['scopes']">

                                    <t t-foreach="g['scopes']" t-as="s">
                                        <div>
                                            <t t-if="s.icon_image">
                                                <img class="icon-img"
                                                    t-att-src="'/web/image/sale.module.scope/%s/icon_image?unique=%s&amp;width=64&amp;height=64' % (s.id, (s.write_date or s.create_date or '0'))"
                                                    style="display:inline-block; vertical-align:middle; max-width:64px; max-height:64px; margin:0;"/>
                                            </t>
                                            <t t-else="">
                                                <span class="fallback-bullet" style="display:inline-block; vertical-align:middle;"></span>
                                            </t>
                                            <span style="display:inline-block; vertical-align:middle; font-size:18pt; font-weight:700; margin-right:8px;">
                                                <t t-esc="s.name"/>
                                            </span>

                                        </div>
                                        <hr />
                                        <div class="rt-content" t-raw="s.description_html" />
                                    </t>
                                </t>
                            </t>
                        </div>
                    </t>

                    <!--extra-->

                    <t t-if="doc.extra_scope_html">
                        <div class="page page-break">
                            <div class="section-title">
                                <span>Alcance adicional</span>
                            </div>
                            <div class="rt-content" t-raw="doc.extra_scope_html" />
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>