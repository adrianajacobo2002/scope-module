<odoo>
    <template id="report_sale_proposal_unified_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <style type="text/css">
                        .header [name="company_address"] { display: none !important; }
                    </style>

                    <!--inf.
                    empresa-->
                    <t
                        t-if="doc.team_id.company_source == 'html' and doc.team_id.company_info_template">
                        <div class="page">
                            <div class="rt-content" t-raw="doc.team_id.company_info_template" />
                        </div>
                    </t>

                    <!--inf.
                    servicio-->
                    <t
                        t-if="doc.team_id.service_source == 'html' and doc.team_id.service_info_template">
                        <div class="page" style="page-break-before: always;">
                            <div class="rt-content" t-raw="doc.team_id.service_info_template" />
                        </div>
                    </t>

                    <!--alcances-->
                    <t t-set="groups" t-value="doc._get_scope_groups_standard()" />
                    <t t-if="groups">
                        <div class="page" style="page-break-before: always;">
                            <h2>Alcance técnico</h2>
                            <t t-foreach="groups" t-as="g">
                                <t t-if="g['scopes']">
                                    <div style="margin-bottom:14px; page-break-inside: avoid;">
                                        <h3 style="margin:14px 0 6px 0;">
                                            <t t-esc="g['product'].display_name" />
                                            <small style="font-weight:normal;color:#666;"> – Equipo: <t
                                                    t-esc="doc.team_id.name" />
                                            </small>
                                        </h3>
                                        <t t-foreach="g['scopes']" t-as="s">
                                            <h4 style="margin:8px 0 4px 0;">
                                                <t t-esc="s.name" />
                                            </h4>
                                            <div class="rt-content" t-raw="s.description_html" />
                                        </t>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </t>


                    <!--cotizacion-->
                    <div class="page" style="page-break-before: always;">
                        <h3>Propuesta Económica</h3>
                        <table class="table table-sm o_main_table" style="page-break-inside: avoid;">
                            <thead>
                                <tr>
                                    <th>Descripción</th>
                                    <th class="text-right">Cantidad</th>
                                    <th class="text-right">Precio</th>
                                    <th class="text-right">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line" t-as="l">
                                    <tr>
                                        <td>
                                            <span t-esc="l.name" />
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="l.product_uom_qty" />
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="l.price_unit"
                                                t-options="{'widget':'monetary','display_currency': doc.currency_id}" />
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="l.price_subtotal"
                                                t-options="{'widget':'monetary','display_currency': doc.currency_id}" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-right">
                                        <strong>Impuestos</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="doc.amount_tax"
                                            t-options="{'widget':'monetary','display_currency': doc.currency_id}" />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-right">
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="doc.amount_total"
                                            t-options="{'widget':'monetary','display_currency': doc.currency_id}" />
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                    <!--extra-->

                    <t t-if="doc.extra_scope_html">
                        <div class="page" style="page-break-before: always;">
                            <h3>Alcance adicional</h3>
                            <div class="rt-content" t-raw="doc.extra_scope_html" />
                        </div>
                    </t>

                </t>
            </t>
        </t>
    </template>
</odoo>