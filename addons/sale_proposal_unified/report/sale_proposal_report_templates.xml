<odoo>
    <template id="report_sale_proposal_extra_pages">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    

                    <!--inf.
                    empresa-->
                    <t
                        t-if="doc.team_id.company_source == 'html' and doc.team_id.company_info_template">
                        <div class="page">
                            <div class="rt-content" t-raw="doc.team_id.company_info_template" />
                        </div>
                    </t>

                    <!--inf.
                    servicio-->
                    <t
                        t-if="doc.team_id.service_source == 'html' and doc.team_id.service_info_template">
                        <div class="page" style="page-break-before: always;">
                            <div class="rt-content" t-raw="doc.team_id.service_info_template" />
                        </div>
                    </t>

                    <!--alcances-->
                    <t t-set="groups" t-value="doc._get_scope_groups_standard()" />
                    <t t-if="groups">
                        <div class="page" style="page-break-before: always;">
                            <h2>Alcance técnico</h2>
                            <t t-foreach="groups" t-as="g">
                                <t t-if="g['scopes']">
                                    <div style="margin-bottom:14px; page-break-inside: avoid;">
                                        <h3 style="margin:14px 0 6px 0;">
                                            <t t-esc="g['product'].display_name" />
                                            <small style="font-weight:normal;color:#666;"> – Equipo: <t
                                                    t-esc="doc.team_id.name" />
                                            </small>
                                        </h3>
                                        <t t-foreach="g['scopes']" t-as="s">
                                            <h4 style="margin:8px 0 4px 0;">
                                                <t t-esc="s.name" />
                                            </h4>
                                            <div class="rt-content" t-raw="s.description_html" />
                                        </t>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </t>

                    <!--extra-->

                    <t t-if="doc.extra_scope_html">
                        <div class="page" style="page-break-before: always;">
                            <h3>Alcance adicional</h3>
                            <div class="rt-content" t-raw="doc.extra_scope_html" />
                        </div>
                    </t>

                </t>
            </t>
        </t>
    </template>
</odoo>