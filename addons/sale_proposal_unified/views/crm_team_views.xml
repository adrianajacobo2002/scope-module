<odoo>
    <record id="view_crm_team_form_inherit_tech_proposal" model="ir.ui.view">
        <field name="name">crm.team.form.tech.proposal</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//sheet/notebook" position="before">
                <group name="grp_flag_propuesta">
                    <field name="incluir_propuesta_tecnica" class="o_highlight" />
                </group>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Propuesta tÃ©cnica"
                    modifiers="{'invisible': [['incluir_propuesta_tecnica','=', False]]}">

                    <div class="o_row o_wrap o_gutter">
                        <div class="o_col-12 o_col-md-6">
                            <div class="o_kanban_record o_kanban_small_column" style="padding:1;">
                                <div class="o_kanban_primary_left">
                                    <i class="fa fa-file-pdf-o fa-2x" />
                                </div>
                                <div class="o_kanban_primary_right">
                                    <strong>Header</strong>
                                    <div class="text-muted">Documento PDF</div>
                                    <field name="proposal_header_pdf"
                                        filename="proposal_header_pdf_filename"
                                        widget="binary"
                                        options="{'accept':'application/pdf'}"
                                        class="mt-2" />
                                    <field name="proposal_header_pdf_filename" invisible="1" />
                                </div>
                            </div>
                        </div>
                        <div class="o_col-12 o_col-md-6">
                            <div class="o_kanban_record o_kanban_small_column" style="padding:1;">
                                <div class="o_kanban_primary_left">
                                    <i class="fa fa-file-pdf-o fa-2x" />
                                </div>
                                <div class="o_kanban_primary_right">
                                    <strong>Footer</strong>
                                    <div class="text-muted">Documento PDF</div>
                                    <field name="proposal_footer_pdf"
                                        filename="proposal_footer_pdf_filename"
                                        widget="binary"
                                        options="{'accept':'application/pdf'}"
                                        class="mt-2" />
                                    <field name="proposal_footer_pdf_filename" invisible="1" />
                                </div>
                            </div>
                        </div>
                    </div>


                </page>
            </xpath>
        </field>
    </record>
</odoo>