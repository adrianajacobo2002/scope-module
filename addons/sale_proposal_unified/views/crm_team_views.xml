<odoo>
    <record id="view_crm_team_form_inherit_tech_proposal" model="ir.ui.view">
        <field name="name">crm.team.form.tech.proposal</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="before">
                <group name="grp_flag_propuesta">
                    <field name="incluir_propuesta_tecnica" class="o_highlight" />
                </group>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Propuesta tÃ©cnica"
                    modifiers="{'invisible': [['incluir_propuesta_tecnica','=', False]]}">

                    <div class="mb-2">
                        <span class="o_form_label">Add headers and footers</span>
                        <div class="btn-group">
                            <button type="action" class="btn btn-primary"
                                name="%(sale_proposal_unified.action_proposal_asset_new)d"
                                context="{'default_team_id': active_id, 'default_type':'header', 'default_name':'Header'}">
                                Add Header
                            </button>
                            <button type="action" class="btn btn-secondary"
                                name="%(sale_proposal_unified.action_proposal_asset_new)d"
                                context="{'default_team_id': active_id, 'default_type':'footer', 'default_name':'Footer'}">
                                Add Footer
                            </button>
                        </div>
                    </div>


                    <field name="proposal_asset_ids"
                        widget="kanban"
                        context="{'default_team_id': active_id}" />

                </page>
            </xpath>
        </field>
    </record>
</odoo>