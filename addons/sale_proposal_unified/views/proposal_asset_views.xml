<odoo>
    <record id="action_proposal_asset_new" model="ir.actions.act_window">
        <field name="name">Agregar PDF</field>
        <field name="res_model">sale.proposal.asset</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_proposal_asset_form" model="ir.ui.view">
        <field name="name">sale.proposal.asset.form</field>
        <field name="model">sale.proposal.asset</field>
        <field name="arch" type="xml">
            <form string="PDF de propuesta">
                <sheet>
                    <group>
                        <field name="team_id" readonly="1" context="{'default_team_id': active_id}" />
                        <field name="type" />
                        <field name="name" />
                        <field name="file" filename="filename" widget="binary"
                            options="{'accept':'application/pdf'}"
                            string="Archivo (PDF)" />
                        <field name="filename" invisible="1" />
                    </group>
                    <footer>
                        <button string="Guardar" type="object" name="write" class="btn-primary"
                            special="save" />
                        <button string="Descartar" class="btn-secondary" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_proposal_asset_kanban" model="ir.ui.view">
        <field name="name">sale.proposal.asset.kanban</field>
        <field name="model">sale.proposal.asset</field>
        <field name="arch" type="xml">
            <kanban default_group_by="type" class="o_kanban_small_column"
                quick_create="false" create="false">

                <field name="name" />
                <field name="type" />
                <field name="filename" />

                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record oe_kanban_global_click">
                            <div class="o_kanban_primary_left">
                                <i class="fa fa-file-pdf-o fa-2x" />
                            </div>
                            <div class="o_kanban_primary_right">
                                <strong t-esc="record.name.value" />
                                <div class="text-muted">Document type: <t
                                        t-esc="record.type.value" /></div>
                                <div class="mt-2">
                                    <a type="edit" class="btn btn-link btn-sm"><i
                                            class="fa fa-pencil" /> Editar</a>
                                    <a type="delete" class="btn btn-link btn-sm text-danger"><i
                                            class="fa fa-trash" /> Eliminar</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>