<odoo>
    <record id="crm_team_tree_unlock" model="ir.ui.view">
        <field name="name">crm.team.tree.unlock</field>
        <field name="model">crm.team</field>
        <!-- OJO: este id puede variar; ver nota abajo -->
        <field name="inherit_id" ref="sales_team.crm_team_view_tree" />
        <field name="priority" eval="99" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">1</attribute>
                <attribute name="edit">1</attribute>
                <attribute name="delete">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="crm_team_form_unlock" model="ir.ui.view">
        <field name="name">crm.team.form.unlock</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form" />
        <field name="priority" eval="99" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">1</attribute>
                <attribute name="edit">1</attribute>
                <attribute name="delete">1</attribute>
                <attribute name="duplicate">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>